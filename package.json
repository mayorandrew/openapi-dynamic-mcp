{
  "name": "openapi-dynamic-mcp",
  "version": "0.2.0",
  "description": "MCP stdio server for OpenAPI APIs",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "openapi-dynamic-mcp": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mayorandrew/openapi-dynamic-mcp.git"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx src/cli.ts",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "mcp",
    "openapi",
    "stdio"
  ],
  "license": "MIT",
  "dependencies": {
    "@apidevtools/swagger-parser": "^12.1.0",
    "@modelcontextprotocol/sdk": "^1.17.3",
    "oauth4webapi": "^3.8.5",
    "openapi-types": "^12.1.3",
    "swagger2openapi": "^7.0.8",
    "yaml": "^2.8.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^22.13.8",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "nock": "^14.0.10",
    "prettier": "^3.8.1",
    "tsx": "^4.20.5",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.56.1",
    "vitest": "^3.2.4"
  }
}
