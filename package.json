{
  "name": "openapi-dynamic-mcp",
  "version": "0.1.2",
  "description": "MCP stdio server for OpenAPI APIs",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "openapi-dynamic-mcp": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mayorandrew/openapi-dynamic-mcp.git"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx src/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "mcp",
    "openapi",
    "stdio"
  ],
  "license": "MIT",
  "dependencies": {
    "@apidevtools/swagger-parser": "^12.1.0",
    "@modelcontextprotocol/sdk": "^1.17.3",
    "oauth4webapi": "^3.8.5",
    "openapi-types": "^12.1.3",
    "yaml": "^2.8.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.13.8",
    "nock": "^14.0.10",
    "tsx": "^4.20.5",
    "typescript": "^5.8.2",
    "vitest": "^3.2.4"
  }
}
